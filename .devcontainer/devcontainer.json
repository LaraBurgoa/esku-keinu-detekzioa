{
    "name": "Esku keinu detekzioa",
    // Use the Dockerfile as the base image
    "dockerFile": "Dockerfile",
    // Use 'tknika' as the container user
    "remoteUser": "tknika",
    // Pass webcam device to the container
    "runArgs": [
        "--device=/dev/video0"
    ],
    "mounts": [
        "source=/home/tknika/curso_ros,target=/tmp/curso_ros,type=bind,consistency=cached"
    ],
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            "settings": {},
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "ms-python.python"
            ]
        }
    },
    // Install python dependencies
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt"
}